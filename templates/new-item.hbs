<h2>New item</h2>

<form>
  <div class="form-group">
    <label for="text">Item Name:</label>
    {{input value=text id="text" class="form-control" rows="1"}}
  </div>
  <div class="form-group">
    <label for="bid-number">Bid Number:</label>
    {{input value=bid-number id="bid-number" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    {{input value=description id="description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="owner">Current Owner:</label>
    {{input value=owner id="owner" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="image">Image:</label>
    {{input value=image id="image" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="price">Starting bid?:</label>
    {{input value=price id="price" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="year-acquired">What year did you get this?</label>
    {{input value=year-acquired id="year-acquired" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="backstory">Backstory!</label>
    {{input value=backstory id="backstory" class="form-control"}}
    </div>
  <button class="btn btn-primary" {{action "save"}}>Add your Item Here</button>
</form>

